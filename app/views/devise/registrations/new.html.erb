<div class="account">
  <h2><%= t(:sign_up, scope: [:devise, :registrations, :new]) %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= label_tag :locale, t(:locale, scope: [:common]) %>
      <br>
      <%= f.select :locale, options_from_collection_for_select([OpenStruct.new({ name: 'English', id: 'en'}), OpenStruct.new({ name: 'PortuguÃªs', id: 'pt'})], :id, :name, I18n.locale) %>
      <br>
      <br>
      <p class="help-block"><%= t(:locale_initial_exercises, scope: [:common]) %></p>
      <%= f.input :email, label: t(:email, scope: [:activerecord, :attributes, :user]), required: true, autofocus: true, input_html: { autocomplete: 'email' } %>
      <%= f.input :name, input_html: { autocomplete: 'name' } %>
      <%= f.input :password, required: true, hint: (I18n.t(:minimum_password_length, count: @minimum_password_length, scope: [:devise, :shared]) if @minimum_password_length), input_html: { autocomplete: 'password' } %>
      <%= f.input :password_confirmation, required: true, input_html: { autocomplete: 'password' } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(:sign_up, scope: [:devise, :registrations, :new]), class: 'btn btn-primary btn-main-action' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>