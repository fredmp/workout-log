<div class="account">
  <h2><%= t(:sign_in, scope: [:devise, :sessions, :new]) %></h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: t(:email, scope: [:activerecord, :attributes, :user]), required: false, autofocus: true, input_html: { autocomplete: 'email' } %>
      <%= f.input :password, label: t(:password, scope: [:activerecord, :attributes, :user]), required: false, input_html: { autocomplete: 'name' } %>
      <%= f.input :remember_me, label: t(:remember_me, scope: [:activerecord, :attributes, :user]), as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(:sign_in, scope: [:devise, :sessions, :new]), class: 'btn btn-primary btn-main-action' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
