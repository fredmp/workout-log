<h2><%= t(:forgot_your_password, scope: [:devise, :passwords, :new]) %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: t(:email, scope: [:activerecord, :attributes, :user]), required: true, autofocus: true %>
  </div>

  <div class="form-actions reset-password">
    <%= f.button :submit, t(:send_me_reset_password_instructions, scope: [:devise, :passwords, :new]), class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
