<h2><%= t(:change_your_password, scope: [:devise, :passwords, :edit]) %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: t(:new_password, scope: [:devise, :passwords, :edit]), required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: 'new-password' } %>
    <%= f.input :password_confirmation, label: t(:confirm_new_password, scope: [:devise, :passwords, :edit]), required: true, input_html: { autocomplete: 'new-password' } %>
  </div>

  <div class="form-actions reset-password">
    <%= f.button :submit, t(:change_my_password, scope: [:devise, :passwords, :edit]), class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
